---
import ZorroSvg from '../icons/zorro.svg';
---

<header
    class="mx-auto w-full max-w-[2000px] px-6 py-6 bg-gradient-to-r from-gray-800 via-gray-500 to-gray-400 text-white rounded-b-lg shadow-lg"
>
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        {/* Logo y título */}
        <div class="flex items-center gap-4">
            <ZorroSvg class="w-14 h-14" />
            <div>
                <h1 class="font-extrabold text-3xl flex items-center gap-2">
                    Bienvenido a <span class="text-astro-red">mi pagina</span>
                    <span class="rounded-full bg-astro-red px-3 py-1 text-xl font-semibold shadow-lg">
                        2025
                    </span>
                </h1>
                <p class="uppercase font-light text-gray-300 mt-1">
                    Proyecto de <strong>@Jhonix</strong>
                </p>
            </div>
        </div>

        {/* Links de navegación */}
        <nav class="flex gap-4 text-sm md:text-base">
            <a href="#" class="hover:text-astro-red transition-colors duration-300 underline">
                Inicio
            </a>
            <a href="#" class="hover:text-astro-red transition-colors duration-300 underline">
                Proyectos
            </a>
            <a href="#" class="hover:text-astro-red transition-colors duration-300 underline">
                Contacto
            </a>
        </nav>
    </div>
</header>
