---
import { work } from "../cv.json";
---

<section class="mx-auto w-full max-w-[2000px] px-6 py-8 bg-gradient-to-r from-gray-800 via-gray-500 to-gray-400 text-white rounded-t-lg shadow-lg">
  <div class="flex flex-col gap-6">
    
    {
        
      work.map(({ name, startDate, endDate, position, summary, highlights }, index) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = endDate !== null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;

        return (
          <ul ={index} style={{ listStyle: "none", padding: 0, textAlign: "center" }}>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>
                <time datetime={startDate ?? ""}>{years}</time>
              </header>
            </article>
          </ul>
        )
      })
    }
  </div>
</section>
